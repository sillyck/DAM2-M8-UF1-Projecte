<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#7AC5DD"
	tools:context=".PantallaBotonsImatge">

	<TextView
		android:id="@+id/textViewTitle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:foregroundTint="#FF0000"
		android:text="TextView"
		android:textColor="#FFFFFF"
		android:textSize="32dp"
		android:textStyle="bold"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<ImageView
		android:id="@+id/imageViewMain"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="32dp"
		android:layout_marginEnd="32dp"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent"
		app:srcCompat="@drawable/imatge_lleons_escut_fassana"
		tools:srcCompat="@drawable/imatge_lleons_escut_fassana" />

	<TableLayout
		android:id="@+id/tableLayout"
		android:layout_width="409dp"
		android:layout_height="729dp"
		app:layout_constraintBottom_toTopOf="@+id/linearLayoutPregunta"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/textViewTitle">

		<TableRow
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<ImageButton
				android:id="@+id/imageButton001"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:srcCompat="@drawable/mapa_realista_esglesia_4x3_001" />

			<ImageButton
				android:id="@+id/imageButton002"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:srcCompat="@drawable/mapa_realista_esglesia_4x3_002" />

			<ImageButton
				android:id="@+id/imageButton003"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:srcCompat="@drawable/mapa_realista_esglesia_4x3_003" />
		</TableRow>

		<TableRow
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<ImageButton
				android:id="@+id/imageButton004"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:srcCompat="@drawable/mapa_realista_esglesia_4x3_004" />

			<ImageButton
				android:id="@+id/imageButton005"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:srcCompat="@drawable/mapa_realista_esglesia_4x3_005" />

			<ImageButton
				android:id="@+id/imageButton006"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:srcCompat="@drawable/mapa_realista_esglesia_4x3_006" />

		</TableRow>

		<TableRow
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<ImageButton
				android:id="@+id/imageButton007"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:srcCompat="@drawable/mapa_realista_esglesia_4x3_007" />

			<ImageButton
				android:id="@+id/imageButton008"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:srcCompat="@drawable/mapa_realista_esglesia_4x3_008" />

			<ImageButton
				android:id="@+id/imageButton009"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:srcCompat="@drawable/mapa_realista_esglesia_4x3_009" />
		</TableRow>

		<TableRow
			android:layout_width="match_parent"
			android:layout_height="match_parent">

			<ImageButton
				android:id="@+id/imageButton010"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:srcCompat="@drawable/mapa_realista_esglesia_4x3_010" />

			<ImageButton
				android:id="@+id/imageButton011"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:srcCompat="@drawable/mapa_realista_esglesia_4x3_011" />

			<ImageButton
				android:id="@+id/imageButton012"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				app:srcCompat="@drawable/mapa_realista_esglesia_4x3_012" />
		</TableRow>
	</TableLayout>

	<LinearLayout
		android:id="@+id/linearLayoutPregunta"
		android:layout_width="783dp"
		android:layout_height="107dp"
		android:orientation="horizontal"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent">

		<com.example.orgue.SquareImageButton
			android:id="@+id/imageButtonPregunta"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:adjustViewBounds="true"
			android:baselineAlignBottom="false"
			android:clickable="true"
			android:contextClickable="false"
			android:cropToPadding="false"
			android:onClick="imageButtonPreguntaOnClick"
			android:rotation="180"
			app:srcCompat="@drawable/fletxa" />
		<!--			android:background="@drawable/fletxa"-->

		<EditText
			android:id="@+id/textViewPregunta"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:autoText="true"
			android:enabled="false"
			android:text="Pregunta"
			tools:ignore="HardcodedText" />

		<View
			android:id="@+id/viewPregunta"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_weight="1" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/linearLayoutResposta"
		android:layout_width="803dp"
		android:layout_height="113dp"
		android:orientation="horizontal"
		app:layout_constraintBottom_toBottomOf="parent">

		<View
			android:id="@+id/viewResposta"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_weight="1" />

		<EditText
			android:id="@+id/textViewRespota"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:autoText="true"
			android:enabled="false"
			android:text="Resposta"
			tools:ignore="HardcodedText" />

		<com.example.orgue.SquareImageButton
			android:id="@+id/imageButtonResposta"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:adjustViewBounds="true"
			android:onClick="imageButtonRespostaOnClick"
			app:srcCompat="@drawable/fletxa" />
<!--			android:background="@drawable/fletxa"-->
	</LinearLayout>

	<LinearLayout
		android:id="@+id/linearLayoutContinuar"
		android:layout_width="810dp"
		android:layout_height="117dp"
		android:orientation="horizontal"
		app:layout_constraintBottom_toBottomOf="parent">

		<View
			android:id="@+id/viewContinuar"
			android:layout_width="0dp"
			android:layout_height="0dp"
			android:layout_weight="1" />

		<com.example.orgue.SquareImageButton
			android:id="@+id/imageButtonContinuar"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:adjustViewBounds="true"
			android:onClick="imageButtonContinuarOnClick"
			android:scaleX="4"
			android:scaleY="4"
			app:srcCompat="@android:drawable/checkbox_on_background" />
	</LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>